<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".WelcomeActivity">


    <Button
        android:id="@+id/driverBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="@string/driverBtn"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:padding="20dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/customerBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/customerBtn"
        android:layout_below="@+id/driverBtn"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:padding="20dp"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/imgAdmin"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_below="@+id/customerBtn"
        android:layout_alignEnd="@+id/customerBtn"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="-69dp"
        app:srcCompat="@drawable/ic_baseline_admin_panel_settings_24" />
</RelativeLayout>